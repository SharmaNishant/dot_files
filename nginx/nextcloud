server {

	listen 80;
	listen [::]:80;

	server_name drive.nishantsharma.me;
	return 301 https://$host:443$request_uri;
}


server {


	server_name drive.nishantsharma.me;

	listen 443 ssl http2;
#    	listen [::]:443 ssl http2 ipv6only=on; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/drive.nishantsharma.me/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/drive.nishantsharma.me/privkey.pem; # managed by Certbot
    	#include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    	#ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

	ssl_stapling on;
	ssl_stapling_verify on;


	client_max_body_size 0;

	underscores_in_headers on;

	location /.well-known/carddav {
    		return 301 $scheme://$host/remote.php/dav;
	}

	location /.well-known/caldav {
    		return 301 $scheme://$host/remote.php/dav;
	}

	location ~ {

		proxy_set_header Host $host;

		proxy_set_header X-Real-IP $remote_addr;

		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

		proxy_set_header X-Forwarded-Proto $scheme;

		add_header Front-End-Https on;


		proxy_headers_hash_max_size 512;

		proxy_headers_hash_bucket_size 64;


		proxy_buffering off;

		proxy_redirect off;

		proxy_max_temp_file_size 0;

		proxy_pass http://127.0.0.1:81;


	}


}

